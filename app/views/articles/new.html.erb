<h1>New Article</h1>

<%= form_for(@article) do |f| %>
    <ul>
        <% @article.errors.full_messages.each do |error| %>
            <li class="error"><%= error %></li>
        <% end %>
    </ul>
    <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :body %><br>
        <%= f.text_area :body, class: "text_area" %>
    </p>
    <p>
        <%= f.submit %>
    </p>

<% end %>
